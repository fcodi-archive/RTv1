{
    "env" : {
        "home" : "${env:HOME}",
        "libftPath" : "${workspaceFolder}/libft",
        "libftInclude" : "${libftPath}/include",
        "projectInclude" : "${workspaceFolder}/include",
        "brewPath" : "${home}/.brew",
        "brewLib" : "${brewPath}/lib",
        "brewInclude" : "${brewPath}/include",
        "brewIncludeSDL2" : "${brewInclude}/SDL2"
    },
    "configurations": [
        {
            "name": "Linux",
            "includePath": [
                "${libftInclude}",
                "${projectInclude}",
                "${brewIncludeSDL2}"
            ],
            "compilerPath": "/usr/bin/gcc",
            "cStandard": "c99",
            "browse": {
                "path": [
                    "${workspaceFolder}",
                    "${libftPath}",
                    "${brewPath}",
                    "${brewLib}"
                ]
            }
        }
    ],
    "version": 4
}